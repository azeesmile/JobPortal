<div class="header-register">
    <a href="#" class="btn btn-link">Register</a>
    <div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", required = "required ", @class="form-control" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required ", @class = "form-control" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", required = "required ", @class="form-control"  })
            <input type="submit" class="btn btn-default" value="Register" />
        }
    </div>
</div>

