<div class="post">
    <div class="post-header">
        <h2>Sign in</h2>
    </div>
    <!-- .post-header -->
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form clearfix", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", required = "required " })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required " })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        @Html.ActionLink("Forget your password?", "ForgotPassword")

        <input type="submit" value="Log in" class="btn btn-default" />
    }
    <!-- .post-footer -->    
    <div class="post-footer">

        <p>Don't have an account yet? @Html.ActionLink("Sign Up", "Register")</p>
    </div>
</div>
