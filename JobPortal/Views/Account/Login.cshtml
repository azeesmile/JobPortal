@model JobPortal.Models.LoginViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h3>Sign In</h3>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", required = "required", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required ", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="checkbox pull-right">
        @Html.ActionLink("Forget password?", "ForgotPassword", new { @class = "pull-right" })
    </div>
    <button type="submit" class="btn btn btn-primary">
        Sign In
    </button>

}
<div class="SignUp">
    <p>Not Have an Account Yet ?? @Html.ActionLink("Sign Up", "Register")</p>
</div>



