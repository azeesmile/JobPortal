@model JobPortal.Models.RegisterViewModel
@model JobPortal.Models.RoleViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<h3>Sign Up</h3>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form clearfix", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", required = "required ", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "required ", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", required = "required ", @class = "form-control" })
    </div>
    <div class="form-group">
        <select class="form-control" id="EmployeeCompany">
            <option value="Employee">Employee</option>
            <option value="Employer">Employer</option>
        </select>
    </div>
    <div class="form-group">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn btn-primary">
        Sign Up
    </button>
}
<div class="SignUp">
    <p>Already Have an Account ?? @Html.ActionLink("Sign In", "Login")</p>
</div>
