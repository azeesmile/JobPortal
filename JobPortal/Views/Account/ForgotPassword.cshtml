@model JobPortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<h3>Forgot Password?</h3>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "login-form clearfix", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", required = "required ", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <input type="submit" class="btn btn btn-primary" value="Send" />
}
<!-- .login-form -->
<div class="SignUp">
    <p>Already have an account?? @Html.ActionLink("Sign In", "Login")</p>
</div>
